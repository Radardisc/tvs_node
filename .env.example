# Database Configuration for PostgreSQL persistence
# This is used when building with --features postgres
POSTGRES_DATABASE_URL=postgres://postgres:password@localhost:5432/tfs_tvs_db

# TVS Root URL for vote URLs
# This is the base URL that will be used to generate vote URLs
TVS_ROOT_URL=http://localhost:8081/vote

# TVS Vote Server Configuration (Optional)
# Runs on separate port for vote submission and management
TVS_VOTE_PORT=8090
TVS_VOTE_HOST=127.0.0.1

# Optional: Override default log level
# RUST_LOG=info,tower_http=debug,tfs_http=debug,tvs=debug
